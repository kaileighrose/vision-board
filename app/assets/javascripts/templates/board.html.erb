<div id="template" class="container">
  <div ng-controller="BoardController as bd">
  <p>BOARD VIEW</p>
    <div ng-repeat="resource in bd.mainboard.resources">
      <div class="slot">
        <h3>Title: {{resource.name}}</h3><p>{{resource.item}}</p></div>
      </div>
    </div>
    <div class="addBoard">
        <button ng-model="bd.clicked">Create Board</button>
        <div id="boardform" ng-show="bd.clicked">
          <form name="form" ng-submit="bd.create(board)">
            <input type="board" name="board.board">
            <button type="submit">Create Board</button>
          </form>
      </div>    
    </div>
    <div ng-repeat="board in bd.boards">
      <ul>
        <li><a href="#" ng.click="bd.get(board.id)">{{board.board}}</a></li>
      </ul>
    </div>
  </div>
</div>